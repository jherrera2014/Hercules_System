                },
                series: [{
                    type: "bullet",
                    data: [[45, 60]]
                }],
                categoryAxis: {
                    majorGridLines: {
                        visible: true
                    },
                    majorTicks: {
                        visible: true
                    }
                },
                valueAxis: [{
                    plotBands: [{
                        from: 0, to: 33, color: "#c6f4be", opacity: 0.6
                    }, {
                        from: 33, to: 66, color: "#b5cdee", opacity: 1
                    }],
                    majorGridLines: {
                        visible: false
                    },
                    min: 0,
